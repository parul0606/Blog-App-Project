<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<body style="  
background-image: url('https://www.desktopbackground.org/download/o/2010/08/17/65421_theme-bin-blog-archive-cubes-hd-wallpapers_1920x1080_h.jpg');
width: 100%;
background-size: cover;
background-position: center;
background-repeat: no-repeat;
">
<div class="container" style="margin-top:8rem;">

    <div class="row">
      <div class="col-lg-6 col-sm-12">
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title"><%= blog.name %></h5>
            <p class="card-text"><%= blog.desc %></p>

            <a href="/blogs/<%=blog._id%>/edit" class="btn btn-info" style="width:30%">Edit</a>
              
            <form method="POST" action="/blogs/<%= blog._id %>?_method=DELETE" class="mt-2">
              <button class="btn btn-danger" style="width:30%">Delete</button>
            </form>
  
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-sm-12">
        <h2 style="color:white;">Leave a Comment</h2>
        <form method="POST" action="/blogs/<%= blog._id %>/review">
          <div class="mb-3">
            <label class="form-label" for="rating" style="color:white;">Rating</label>
            <input class="form-control" type="range" min="1" max="5" name="review[rating]" id="rating">
          </div>
          <div class="mb-3">
            <label class="form-label" for="body" style="color:white;">Comment</label>
            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4"></textarea>
          </div>

          <button class="btn btn-success">Submit</button>

        </form>

        <div class="mt-5">
          <%for(let review of blog.reviews){%>
            <div class="card mb-4">
              <div class="card-header text-capitalize">
                <%=review.username%>
              </div>
                <div class="card-body">
                    <h6 class="card-title"> <strong>Rating :</strong>  <%= review.rating %></h6>
                    <p class="card-text"> <strong>Comment :</strong><%= review.body %></p>
                </div>
            </div>
          <%}%>
        </div>
      </div>
    </div>

</div>
</body>
<%- include("../partials/footer") %>