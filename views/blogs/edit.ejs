<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<body style="
background-image: url('https://www.desktopbackground.org/download/o/2010/08/17/65421_theme-bin-blog-archive-cubes-hd-wallpapers_1920x1080_h.jpg');
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
    width:100%;
">
<div class="container" style="margin-top:5rem;">
  <h1 style="color:white;">Edit this Blog</h1>
    <form method="POST" action="/blogs/<%= blog._id%>?_method=PATCH" >
        <div class="mb-3">
          <label for="name" class="form-label" style="color:white;">Title</label>
          <input type="text" class="form-control" id="name" name="blog[name]" placeholder="Title" value="<%= blog.name %>">
          
        </div>
        <div class="mb-3">
           <label for="desc" class="form-label"  style="color:white;">Description</label>
           <textarea class="form-control" name="blog[desc]" id="desc" cols="30" rows="7"><%= blog.desc %></textarea>
        </div>
       
        <button type="submit" class="btn btn-primary">Save changes</button>
        <br>
        <br>
      </form>
    </div>
</body>
<%- include("../partials/footer") %>
